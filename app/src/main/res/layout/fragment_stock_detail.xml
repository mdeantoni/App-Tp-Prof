                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="12.9"
                android:id="@+id/stock_detail_price_sales"
                android:gravity="right"
