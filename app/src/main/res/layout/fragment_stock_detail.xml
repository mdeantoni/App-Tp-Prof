            <View
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="1dp"
                android:background="#888888" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Variación %"
                android:id="@+id/textView17" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="10.5"
                android:id="@+id/stock_detail_change_percentage"
                android:gravity="right"
                android:textAlignment="gravity"/>

            <Space
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="20px" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Variación"
                android:id="@+id/textView19" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="12.9"
                android:id="@+id/stock_detail_change"
                android:gravity="right"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <View
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="1dp"
                android:background="#888888" />
            <Space
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="1px" />

            <View
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="1dp"
                android:background="#888888" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cap. Merc."
                android:id="@+id/textView21" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="$100.54MM"
                android:id="@+id/stock_detail_market_cap"
                android:gravity="right"
                android:textAlignment="gravity"/>

            <Space
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="20px" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="P/G"
                android:id="@+id/textView23" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="12.9"
                android:id="@+id/stock_detail_price_earnings"
                android:gravity="right"
                android:textAlignment="gravity"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

