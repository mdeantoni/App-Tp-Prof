<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/list_item_quote_textview"
            android:text="Petrobras"
            android:gravity="center_vertical|bottom"
            android:layout_weight="10"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="24/12/2016 14:53 pm"
            android:id="@+id/list_item_datetime_textview"
            android:layout_weight="10"
            android:gravity="top"
            android:paddingLeft="10dp" />



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$103.14"
            android:id="@+id/list_item_lastprice_textview"
            android:layout_weight="10"
            android:gravity="bottom|right"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/list_item_changes_textview"
            android:text="+12.5 (+10.14%)"
            android:layout_weight="10"
            android:gravity="right|top"
            android:paddingRight="10dp"
            android:textColor="#1bd30e" />
    </LinearLayout>


</LinearLayout>